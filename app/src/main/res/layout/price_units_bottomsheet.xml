<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/units_bottom_sheet"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/close_bottomsheet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_close"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" />


            <GridLayout
                android:id="@+id/price_units_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingTop="48dp"
                android:rowCount="4"
                android:columnCount="3">
                <Button
                    android:id="@+id/b1"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="Piece" />
                <Button
                    android:id="@+id/b2"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="KG" />
                <Button
                    android:id="@+id/b3"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="Gram" />
                <Button
                    android:id="@+id/b4"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="ML" />
                <Button
                    android:id="@+id/b5"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="Liter" />
                <Button
                    android:id="@+id/b6"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="MM" />
                <Button
                    android:id="@+id/b7"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="Inch" />
                <Button
                    android:id="@+id/b8"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="Feet" />
                <Button
                    android:id="@+id/b9"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="Meter" />
                <Button
                    android:id="@+id/b10"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="SQ FT" />
                <Button
                    android:id="@+id/b11"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="SQ Meter" />
                <Button
                    android:id="@+id/b12"
                    style="@style/bottom_sheet_buttons_style"
                    android:text="KM" />

            </GridLayout>
        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>